{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["es6", "es2015", "dom", "DOM.Iterable"],
    "declaration": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "pretty": true,
    "strict": true,
    "noErrorTruncation": true,
    "noImplicitReturns": true,
    "allowJs": true,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist/",
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "sourceMap": true
  },
  "include": ["src/**/*.ts"],
  "ts-node": {
    "files": true
  }
}
